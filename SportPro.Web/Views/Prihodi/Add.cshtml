@model SportPro.Web.Models.ViewModels.AddPrihodRequest

@{
    ViewData["Title"] = "Dodavanje novog prihoda";
}

@if (User.IsInRole("Uposlenik"))
{
    <div class="row d-flex justify-content-center">
        <div class="col-md-4">
            <form asp-action="Add">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Naziv" class="control-label"></label>
                    <input asp-for="Naziv" class="form-control" required maxlength="100" />
                    <span asp-validation-for="Naziv" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label for="KategorijePrihodaIDKategorijePrihoda" class="control-label">Kategorija prihoda</label>
                    <select id="KategorijePrihodaIDKategorijePrihoda" name="KategorijePrihodaIDKategorijePrihoda" class="form-control">
                        @foreach (var tipPromocije in Model.KategorijePrihodas)
                        {
                            <option value="@tipPromocije.IDKategorijePrihoda">@tipPromocije.Naziv</option>
                        }
                    </select>
                    <span asp-validation-for="KategorijePrihodaIDKategorijePrihoda" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Opis" class="control-label"></label>
                    <input asp-for="Opis" class="form-control" maxlength="200" />
                    <span asp-validation-for="Opis" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Datum" class="control-label">Datum nastanka</label>
                    <input asp-for="Datum" class="form-control" required />
                    <span asp-validation-for="Datum" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Iznos" class="control-label"></label>
                    <input asp-for="Iznos" class="form-control" required />
                    <span asp-validation-for="Iznos" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Mjesec" class="control-label"></label>
                    <input asp-for="Mjesec" class="form-control" />
                    <span asp-validation-for="Mjesec" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Godina" class="control-label"></label>
                    <input asp-for="Godina" class="form-control" />
                    <span asp-validation-for="Godina" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group d-flex justify-content-between">
                    <input type="submit" value="Dodaj" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-danger">Odustani</a>
                </div>
            </form>
        </div>
    </div>


    @section Scripts {
    @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
}
else
{
    <div class="container my-5">
        <h2 align="center">Nemate pravo pristupa ovoj stranici!</h2>
    </div>
}