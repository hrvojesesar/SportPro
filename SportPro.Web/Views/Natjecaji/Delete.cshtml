@model SportPro.Web.Models.Domains.Natjecaji

@{
    ViewData["Title"] = "Brisanje natječaja";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Natjecaji</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Naziv
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Naziv)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Opis)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Opis)
        </dd>
        <dt class="col-sm-2">
            Procijenjena vrijednost
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProcijenjenaVrijednost)
        </dd>
        <dt class="col-sm-2">
            Trajanje od
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrajanjeOd)
        </dd>
        <dt class="col-sm-2">
            Trajanje do
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrajanjeDo)
        </dd>
        <dt class="col-sm-2">
            Datum Objave
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatumObjave)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Aktivan)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Aktivan)
            {
                <text>Da</text>
            }
            else
            {
                <text>Ne</text>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dobitnik)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dobitnik)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IDNatjecaj" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
