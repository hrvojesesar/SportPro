@model SportPro.Web.Models.Domains.Natjecaji

@{
    ViewData["Title"] = "Brisanje natječaja";
}

@if (User.IsInRole("Menadzer"))
{
    <h3>Jeste sigurni da želite izbrisati natječaj?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Naziv
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Naziv)
            </dd>
            <dt class="col-sm-2">
                Opis
            </dt>
            <dd class="col-sm-10">
                <a href="#" class="opis-link btn btn-secondary" data-bs-toggle="modal" data-bs-target="#opisModal_@Model.IDNatjecaj">Prikaži opis</a>
                <div class="modal fade" id="opisModal_@Model.IDNatjecaj" tabindex="-1" aria-labelledby="opisModalLabel_@Model.IDNatjecaj" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="opisModalLabel_@Model.IDNatjecaj">Opis natječaja</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                @Html.Raw(Model.Opis)
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Zatvori</button>
                            </div>
                        </div>
                    </div>
                </div>
            </dd>
            <dt class="col-sm-2">
                Procijenjena vrijednost
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProcijenjenaVrijednost) KM
            </dd>
            <dt class="col-sm-2">
                Trajanje od
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TrajanjeOd)
            </dd>
            <dt class="col-sm-2">
                Trajanje do
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TrajanjeDo)
            </dd>
            <dt class="col-sm-2">
                Datum Objave
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DatumObjave)
            </dd>
            <dt class="col-sm-2">
                Aktivan
            </dt>
            <dd class="col-sm-10">
                @if (Model.Aktivan)
                {
                    <text>Da</text>
                }
                else
                {
                    <text>Ne</text>
                }
            </dd>
            <dt class="col-sm-2">
                Dobitnik
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Dobitnik)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="IDNatjecaj" />
            <input type="submit" value="Izbriši" class="btn btn-danger" /> 
            <a asp-action="Index" class="btn btn-dark">Vrati se na popis</a>
        </form>
    </div>
}
else
{
    <div class="container my-5">
        <h2 align="center">Nemate pravo pristupa ovoj stranici!</h2>
    </div>
}