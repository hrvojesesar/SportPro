@model SportPro.Web.Models.ViewModels.EditNatjecajRequest

@{
    ViewData["Title"] = "Izbriši";
}


<h3>Jeste li sigurni da želite izbrisati ovaj natječaj?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Naziv)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Naziv)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Opis)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Opis)
        </dd>
        <dt class="col-sm-2">
            Procijenjena vrijednost
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProcijenjenaVrijednost) KM
        </dd>
        <dt class="col-sm-2">
            Trajanje od
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrajanjeOd)
        </dd>
        <dt class="col-sm-2">
            Trajanje do
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrajanjeDo)
        </dd>
        <dt class="col-sm-2">
            Datum objavljivanja
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatumObjave)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Aktivan)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Aktivan)
            {
                <text>Da</text>
            }
            else
            {
                <text>Ne</text>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dobitnik)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dobitnik)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IDNatjecaj" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
