@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Najprodavaniji Artikli po Kategoriji";
    var najprodavanijiArtikliPoKategoriji = ViewBag.NajprodavanijiArtikliPoKategoriji as IEnumerable<dynamic>;
}

@if (User.IsInRole("Admin"))
{
    <h2 align="center">Najprodavaniji Artikli po Kategoriji</h2>
    <br />

    @foreach (var kategorija in najprodavanijiArtikliPoKategoriji)
    {
        <h3>@kategorija.Kategorija</h3>
        <table class="table table-hover table-bordered border-secondary mt-4">
            <thead>
                <tr class="table-primary">
                    <th>Naziv Artikla</th>
                    <th class="text-center">Prodano</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var artikal in kategorija.TopArtikli)
                {
                    <tr>
                        <td>@artikal.Naziv</td>
                        <td>@artikal.Prodano</td>
                    </tr>
                }
            </tbody>
        </table>
        <br />
    }

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // You can add a chart here for visual representation if needed
    </script>
}
else
{
    <div class="container my-5">
        <h2 align="center">Nemate pravo pristupa ovoj stranici!</h2>
    </div>
}