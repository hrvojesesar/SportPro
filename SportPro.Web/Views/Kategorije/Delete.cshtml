@model SportPro.Web.Models.Domains.Kategorije

@{
    ViewData["Title"] = "Brisanje kategorije";
}

@if (User.IsInRole("Uposlenik"))
{
    <h3>Jeste sigurni da želite izbrisati kategoriju?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Naziv
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Naziv)
            </dd>
            <dt class="col-sm-2">
                Opis
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Opis)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="IDKategorija" />
            <input type="submit" value="Izbriši" class="btn btn-danger" /> |
            <a asp-action="Index">Vrati se na popis</a>
        </form>
    </div>
}
else
{
    <div class="container my-5">
        <h2 align="center">You are not allowed to access this page!</h2>
    </div>
}