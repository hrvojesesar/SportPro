@model IEnumerable<SportPro.Web.Models.Domains.Kategorije>

@{
    ViewData["Title"] = "Kategorije";
}


@if (User.IsInRole("Uposlenik"))
{
    <p>
        <a asp-controller="Kategorije" asp-action="Add">Dodaj novu kategoriju</a>
    </p>
    @if (Model.Count() == 0)
    {
        <h2 align="center">Nema podataka o kategorijama!</h2>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Naziv
                    </th>
                    <th>
                        Opis
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Naziv)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Opis)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.IDKategorija">Uredi</a> |
                            <a asp-action="Delete" asp-route-id="@item.IDKategorija">Izbriši</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}
else
{
    <div class="container my-5">
        <h2 align="center">Nemate pravo pristupa ovoj stranici!</h2>
    </div>
}