@model List<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Upravljanje ulogama";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (User.IsInRole("Admin"))
{
    <br/>
    <form method="post" asp-action="AddRole" asp-controller="Roles">
        <div class="input-group" style="display:block">
            <input name="roleName" class="form-control-2" placeholder="Unesite naziv uloge...">
            <span class="input-group-btn">
                <button action="submit" class="btn btn-primary ms-2 mb-1 px-3">Dodaj Novu Ulogu</button>
            </span>
        </div>
    </form>
    <table class="table table-hover table-bordered border-secondary mt-4">
        <thead>
            <tr class="table-primary">
                <th>Id</th>
                <th>Uloga</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="container my-5">
        <h2 align="center">Nemate pravo pristupa ovoj stranici!</h2>
    </div>
}