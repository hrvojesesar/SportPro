@model SportPro.Web.Models.ViewModels.AddVelicinaRequest

@{
    ViewData["Title"] = "Dodavanje nove veličine";
}

@if (User.IsInRole("Uposlenik"))
{
    <div class="row d-flex justify-content-center">
        <div class="col-md-4">
            <form asp-action="Add">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Velicina" class="control-label">Veličina</label>
                    <input asp-for="Velicina" class="form-control" required maxlength="5" />
                    <span asp-validation-for="Velicina" class="text-danger"></span>
                </div>
                <br/>
                <div class="form-group d-flex justify-content-between">
                    <input type="submit" value="Dodaj" class="btn btn-primary" />
                     <a asp-action="Index" class="btn btn-danger">Odustani</a>
                </div>
            </form>
        </div>
    </div>


    @section Scripts {
    @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
}
else
{
    <div class="container my-5">
        <h2 align="center">Nemate pravo pristupa ovoj stranici!</h2>
    </div>
}