@model SportPro.Web.Models.ViewModels.EditVelicinaRequest

@{
    ViewData["Title"] = "Uređivanje veličine";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IDVelicina" />
            <div class="form-group">
                <label asp-for="Velicina" class="control-label">Veličina</label>
                <input asp-for="Velicina" class="form-control" />
                <span asp-validation-for="Velicina" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Spremi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Vrati se na popis</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
