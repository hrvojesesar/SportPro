@model IEnumerable<SportPro.Web.Models.Domains.Velicine>

@{
    ViewData["Title"] = "Veličine";
}

@if (User.IsInRole("Uposlenik"))
{
    <p>
        <a asp-controller="Velicine" asp-action="Add">Dodaj novu veličinu</a>
    </p>
    @if (Model.Count() == 0)
    {
        <h2 align="center">Nema podataka o veličinama!</h2>
    }
    else
    {

        <table class="table">
            <thead>
                <tr>
                    <th>
                        Veličina
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Velicina)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.IDVelicina">Uredi</a> |
                            <a asp-action="Delete" asp-route-id="@item.IDVelicina">Izbriši</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}
else
{
    <div class="container my-5">
        <h2 align="center">Nemate pravo pristupa ovoj stranici!</h2>
    </div>
}