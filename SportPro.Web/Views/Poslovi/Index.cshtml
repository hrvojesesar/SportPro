@model IEnumerable<SportPro.Web.Models.Domains.Poslovi>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-controller="Poslovi" asp-action="Add">Create New</a>
</p>
@if (Model.Count() == 0)
{
    <h2 align="center">Nema podataka o poslovima!</h2>
}
else
{
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naziv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OpisPosla)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BrojOsoba)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BrojSati)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CijenaSata)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PotrebnaOprema)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PocetakRadova)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KrajRadova)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trosak)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profit)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naziv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpisPosla)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BrojOsoba)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BrojSati)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CijenaSata)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PotrebnaOprema)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PocetakRadova)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KrajRadova)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trosak)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Profit)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IDPosla">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IDPosla">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IDPosla">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
}