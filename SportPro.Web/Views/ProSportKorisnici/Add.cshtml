@model SportPro.Web.Models.ViewModels.AddProSportKorisnikRequest

@{
    ViewData["Title"] = "Dodavanje novog ProSportKorisnika";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Ime" class="control-label">Ime</label>
                <input asp-for="Ime" class="form-control" required maxlength="20" />
                <span asp-validation-for="Ime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prezime" class="control-label">Prezime</label>
                <input asp-for="Prezime" class="form-control" required maxlength="20" />
                <span asp-validation-for="Prezime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Spol" class="control-label">Spol</label>
                <select asp-for="Spol" class="form-control" name="Spol">
                    <option>M</option>
                    <option>Ž</option>
                    <span asp-validation-for="Spol" class="text-danger"></span>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" required maxlength="50" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lozinka" class="control-label">Lozinka</label>
                <input asp-for="Lozinka" class="form-control" required maxlength="20" />
                <span asp-validation-for="Lozinka" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefon" class="control-label">Telefon</label>
                <input asp-for="Telefon" class="form-control" required maxlength="20" />
                <span asp-validation-for="Telefon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adresa" class="control-label">Adresa</label>
                <input asp-for="Adresa" class="form-control" required maxlength="50" />
                <span asp-validation-for="Adresa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grad" class="control-label">Grad</label>
                <input asp-for="Grad" class="form-control" required maxlength="50" />
                <span asp-validation-for="Grad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Drzava" class="control-label">Država</label>
                <input asp-for="Drzava" class="form-control" required maxlength="50" />
                <span asp-validation-for="Drzava" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostanskiBroj" class="control-label">Poštanski broj</label>
                <input asp-for="PostanskiBroj" class="form-control" required />
                <span asp-validation-for="PostanskiBroj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatumRodenja" class="control-label">Datum rođenja</label>
                <input asp-for="DatumRodenja" class="form-control" required />
                <span asp-validation-for="DatumRodenja" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatumRegistracije" class="control-label">Datum registracije</label>
                <input asp-for="DatumRegistracije" class="form-control" required />
                <span asp-validation-for="DatumRegistracije" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Verificiran" /> @Html.DisplayNameFor(model => model.Verificiran)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label">Status</label>
                <select asp-for="Status" class="form-control" name="Status">
                    <option>Aktivan</option>
                    <option>Neaktivan</option>
                    <option>Deaktiviran</option>
                    <option>Storniran</option>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Vrati se na popis</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
