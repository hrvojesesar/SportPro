@model SportPro.Web.Models.ViewModels.EditBojaRequest

@{
    ViewData["Title"] = "Uređivanje boje";
}

@if (User.IsInRole("Uposlenik"))
{
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IDBoja" />
                <div class="form-group">
                    <label asp-for="NazivBoje" class="control-label">Naziv boje</label>
                    <input asp-for="NazivBoje" class="form-control" />
                    <span asp-validation-for="NazivBoje" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Vrati se na popis</a>
    </div>

    @section Scripts {
    @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
}
else
{
    <div class="container my-5">
        <h2 align="center">You are not allowed to access this page!</h2>
    </div>
}