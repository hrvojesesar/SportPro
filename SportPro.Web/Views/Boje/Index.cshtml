@model IEnumerable<SportPro.Web.Models.Domains.Boje>

@{
    ViewData["Title"] = "Boje";
}

@if (User.IsInRole("Uposlenik"))
{
    <p>
        <a asp-controller="Boje" asp-action="Add">Dodaj novu boju</a>
    </p>

    @if (Model.Count() == 0)
    {
        <h2 align="center">Nema podataka o bojama!</h2>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Naziv boje
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NazivBoje)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.IDBoja">Uredi</a> |
                            <a asp-action="Delete" asp-route-id="@item.IDBoja">Izbriši</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}
else
{
    <div class="container my-5">
        <h2 align="center">You are not allowed to access this page!</h2>
    </div>
}