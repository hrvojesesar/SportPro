@model IEnumerable<SportPro.Web.Models.Domains.Boje>

@{
    ViewData["Title"] = "Boje";
}

<p>
    <a asp-controller="Boje" asp-action="Add">Dodaj novu boju</a>
</p>

@if (Model.Count() == 0)
{
    <h2 align="center">Nema podataka o bojama!</h2>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Naziv boje
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NazivBoje)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IDBoja">Uredi</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}