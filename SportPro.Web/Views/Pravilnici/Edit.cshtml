@model SportPro.Web.Models.ViewModels.EditPravilnikRequest

@{
    ViewData["Title"] = "Uređivanje pravilnika";
}

@if (User.IsInRole("Uposlenik"))
{
    <div class="container mt-5">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IDPravilnik" />

            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        <label asp-for="Opis" class="control-label">Opis</label>
                        <textarea asp-for="Opis" class="form-control" id="opis" required></textarea>
                        <span asp-validation-for="Opis" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Naziv" class="control-label">Naziv</label>
                        <input asp-for="Naziv" class="form-control" />
                        <span asp-validation-for="Naziv" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="DatumObjavljivanja" class="control-label">Datum objave</label>
                        <input asp-for="DatumObjavljivanja" class="form-control" />
                        <span asp-validation-for="DatumObjavljivanja" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Aktivan" /> @Html.DisplayNameFor(model => model.Aktivan)
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-group d-flex justify-content-between mt-4">
                <input type="submit" value="Spremi" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-danger">Odustani</a>
            </div>
        </form>
    </div>

    @section Scripts {
    @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }

        <script>
            // Initialize Froala editor with a specific height
            new FroalaEditor('#opis', {
                height: 300
            });
        </script>
    }
}
else
{
    <div class="container my-5">
        <h2 align="center">Nemate pravo pristupa ovoj stranici!</h2>
    </div>
}
