@model SportPro.Web.Models.Domains.Pravilnici

@{
    ViewData["Title"] = "Brisanje pravilnika";
}

<h3>Jeste sigurni da želite izbrisati pravilnik?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Naziv
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Naziv)
        </dd>
        <dt class="col-sm-2">
            Opis
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Opis)
        </dd>
        <dt class="col-sm-2">
            Datum objave
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatumObjavljivanja)
        </dd>
        <dt class="col-sm-2">
            Aktivan
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Aktivan)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IDPravilnik" />
        <input type="submit" value="Izbriši" class="btn btn-danger" /> |
        <a asp-action="Index">Vrati se na popis</a>
    </form>
</div>
