@model SportPro.Web.Models.ViewModels.AddPravilnikRequest

@{
    ViewData["Title"] = "Dodavanje novog pravilnika";
}

@if (User.IsInRole("Uposlenik"))
{
    <div class="row d-flex justify-content-center">
        <div class="col-md-4">
            <form asp-action="Add">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Naziv" class="control-label"></label>
                    <input asp-for="Naziv" class="form-control" required />
                    <span asp-validation-for="Naziv" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Opis" class="control-label"></label>
                    <textarea asp-for="Opis" class="form-control" id="opis" required></textarea>
                    <span asp-validation-for="Opis" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="DatumObjavljivanja" class="control-label">Datum objave</label>
                    <input asp-for="DatumObjavljivanja" class="form-control" />
                    <span asp-validation-for="DatumObjavljivanja" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Aktivan" /> @Html.DisplayNameFor(model => model.Aktivan)
                    </label>
                </div>
                <br />
                <div class="form-group d-flex justify-content-between">
                    <input type="submit" value="Dodaj" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-danger">Odustani</a>
                </div>
            </form>
        </div>
    </div>



    @section Scripts {


    @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }


        <script>
            // Initialize Froala editor with a specific height
            new FroalaEditor('#opis', {
                height: 300
            });
        </script>
    }
}
else
{
    <div class="container my-5">
        <h2 align="center">Nemate pravo pristupa ovoj stranici!</h2>
    </div>
}