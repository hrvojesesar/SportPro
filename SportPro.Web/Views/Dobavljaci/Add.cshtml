@model SportPro.Web.Models.ViewModels.AddDobavljacRequest

@{
    ViewData["Title"] = "Dodavanje novog dobavljača";
}

@if (User.IsInRole("Uposlenik"))
{
    <div class="container mt-5">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Naziv" class="control-label">Naziv</label>
                        <input asp-for="Naziv" class="form-control" required maxlength="20" />
                        <span asp-validation-for="Naziv" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Adresa" class="control-label">Adresa</label>
                        <input asp-for="Adresa" class="form-control" required maxlength="100" />
                        <span asp-validation-for="Adresa" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Grad" class="control-label">Grad</label>
                        <input asp-for="Grad" class="form-control" required maxlength="50" />
                        <span asp-validation-for="Grad" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Drzava" class="control-label">Država</label>
                        <input asp-for="Drzava" class="form-control" required maxlength="50" />
                        <span asp-validation-for="Drzava" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Telefon" class="control-label">Telefon</label>
                        <input asp-for="Telefon" class="form-control" required maxlength="20" />
                        <span asp-validation-for="Telefon" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Email" class="control-label">Email</label>
                        <input asp-for="Email" class="form-control" maxlength="100" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="PocetakSuradnje" class="control-label">Početak suradnje</label>
                        <input asp-for="PocetakSuradnje" class="form-control" />
                        <span asp-validation-for="PocetakSuradnje" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="KrajSuradnje" class="control-label">Kraj suradnje</label>
                        <input asp-for="KrajSuradnje" class="form-control" />
                        <span asp-validation-for="KrajSuradnje" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="SuradnjaAktivna" class="control-label">Aktivna suradnja</label>
                        <div>
                            <label><input type="radio" asp-for="SuradnjaAktivna" value="Da" /> Da</label>
                            <label><input type="radio" asp-for="SuradnjaAktivna" value="Ne" /> Ne</label>
                        </div>
                        <span asp-validation-for="SuradnjaAktivna" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group d-flex justify-content-between mt-4">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-danger">Odustani</a>
            </div>
        </form>
    </div>

    @section Scripts {
    @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
}
else
{
    <div class="container my-5">
        <h2 align="center">Nemate pravo pristupa ovoj stranici!</h2>
    </div>
}
