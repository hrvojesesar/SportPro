@model SportPro.Web.Models.ViewModels.ChangePasswordRequest

@{
    ViewBag.Title = "Change Password";
}

<h3>Promijeni lozinku</h3>
<div class="row">
    <div class="col-md-6">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="CurrentPassword" class="form-control" autocomplete="current-password" aria-required="true" />
                <label asp-for="CurrentPassword" class="form-label">Stara lozinka</label>
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="NewPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="NewPassword" class="form-label">Nova lozinka</label>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="ConfirmNewPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="ConfirmNewPassword" class="form-label">Potvrdi novu lozinku</label>
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Promijeni lozinku</button>
        </form>
    </div>
</div>