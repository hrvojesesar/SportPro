@using SportPro.Web.Models.Domains
@model SportPro.Web.Models.ViewModels.AddZaposlenikRequest

@{
    ViewData["Title"] = "Dodavanje novog zaposlenika";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Ime" class="control-label"></label>
                <input asp-for="Ime" class="form-control" />
                <span asp-validation-for="Ime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prezime" class="control-label"></label>
                <input asp-for="Prezime" class="form-control" />
                <span asp-validation-for="Prezime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Spol" class="control-label"></label>
                <select asp-for="Spol" class="form-control" name="Spol">
                    <option>M</option>
                    <option>Ž</option>
                    <span asp-validation-for="Spol" class="text-danger"></span>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Adresa" class="control-label"></label>
                <input asp-for="Adresa" class="form-control" />
                <span asp-validation-for="Adresa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grad" class="control-label"></label>
                <input asp-for="Grad" class="form-control" />
                <span asp-validation-for="Grad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Drzava" class="control-label"></label>
                <input asp-for="Drzava" class="form-control" />
                <span asp-validation-for="Drzava" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefon" class="control-label"></label>
                <input asp-for="Telefon" class="form-control" />
                <span asp-validation-for="Telefon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatumZaposlenja" class="control-label"></label>
                <input asp-for="DatumZaposlenja" class="form-control" />
                <span asp-validation-for="DatumZaposlenja" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Certifikati" class="control-label"></label>
                <input asp-for="Certifikati" class="form-control" />
                <span asp-validation-for="Certifikati" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JMBG" class="control-label"></label>
                <input asp-for="JMBG" class="form-control" />
                <span asp-validation-for="JMBG" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BrojBankovnogRacuna" class="control-label"></label>
                <input asp-for="BrojBankovnogRacuna" class="form-control" />
                <span asp-validation-for="BrojBankovnogRacuna" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kvalifikacija" class="control-label"></label>
                <input asp-for="Kvalifikacija" class="form-control" />
                <span asp-validation-for="Kvalifikacija" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatumZavrsetkaRadnogOdnosa" class="control-label"></label>
                <input asp-for="DatumZavrsetkaRadnogOdnosa" class="form-control" />
                <span asp-validation-for="DatumZavrsetkaRadnogOdnosa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="PoslovnicaID" class="control-label">Poslovnica</label>
                <select id="PoslovnicaID" name="PoslovnicaID" class="form-control">
                    <option></option>
                    @foreach (var poslovnica in Model.Poslovnices)
                    {
                        <option value="@poslovnica.IDPoslovnica">@poslovnica.Naziv</option>
                    }
                </select>
                <span asp-validation-for="PoslovnicaID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
