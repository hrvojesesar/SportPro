@model SportPro.Web.Models.Domains.Users

@{
    ViewData["Title"] = "Brisanje korisnika";
}


@if (User.IsInRole("Admin"))
{
    <h3>Jeste sigurni da želite ukloniti korisnika?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Korisničko ime
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserName)
            </dd>
            <dt class="col-sm-2">
                Email
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="UserId" />
            <input type="submit" value="Izbriši" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-dark">Vrati se na popis</a>
        </form>
    </div>
}
else
{
    <div class="container my-5">
        <h2 align="center">Nemate pravo pristupa ovoj stranici!</h2>
    </div>
}