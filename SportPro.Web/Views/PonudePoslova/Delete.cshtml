@model SportPro.Web.Models.Domains.PonudePoslova

@{
    ViewData["Title"] = "Brisanje ponude";
}
<h3>Jeste sigurni da želite izbrisati ponudu?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Naziv
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Naziv)
        </dd>
        <dt class = "col-sm-2">
            Opis posla
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OpisPosla)
        </dd>
        <dt class = "col-sm-2">
            Broj osoba
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BrojOsoba)
        </dd>
        <dt class = "col-sm-2">
            Broj sati
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BrojSati)
        </dd>
        <dt class = "col-sm-2">
            Cijena sata
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CijenaSata)
        </dd>
        <dt class = "col-sm-2">
            Potrebna oprema
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PotrebnaOprema)
        </dd>
        <dt class = "col-sm-2">
            Početak radova
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PocetakRadova)
        </dd>
        <dt class = "col-sm-2">
            Kraj radova
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.KrajRadova)
        </dd>
        <dt class = "col-sm-2">
            Lokacija
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Lokacija)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IDPonudaPoslova" />
        <input type="submit" value="Izbriši" class="btn btn-danger" /> |
        <a asp-action="Index">Vrati se na popis</a>
    </form>
</div>
