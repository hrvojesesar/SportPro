@model SportPro.Web.Models.Domains.Poslovnice

@{
    ViewData["Title"] = "Brisanje poslovnice";
}

@if (User.IsInRole("Uposlenik"))
{
    <h3>Jeste sigurni da želite izbrisati poslovnicu?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Naziv
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Naziv)
            </dd>
            <dt class="col-sm-2">
                Adresa
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Adresa)
            </dd>
            <dt class="col-sm-2">
                Grad
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Grad)
            </dd>
            <dt class="col-sm-2">
                Država
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Drzava)
            </dd>
            <dt class="col-sm-2">
                Telefon
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Telefon)
            </dd>
            <dt class="col-sm-2">
                Email
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                Početak radnog vremena
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RadnoVrijemeOd)
            </dd>
            <dt class="col-sm-2">
                Kraj radnog vremena
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RadnoVrijemeDo)
            </dd>
            <dt class="col-sm-2">
                Datum otvaranja
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DatumOtvaranja)
            </dd>
            <dt class="col-sm-2">
                Status
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Status)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="IDPoslovnica" />
            <input type="submit" value="Izbriši" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-dark">Vrati se na popis</a>
        </form>
    </div>
}
else
{
    <div class="container my-5">
        <h2 align="center">Nemate pravo pristupa ovoj stranici!</h2>
    </div>
}