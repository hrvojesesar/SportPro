@model SportPro.Web.Models.ViewModels.EditPoslovnicaRequest

@{
    ViewData["Title"] = "Uređivanje poslovnice";
}

@if (User.IsInRole("Uposlenik"))
{
    <div class="container mt-5">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IDPoslovnica" />
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Naziv" class="control-label">Naziv</label>
                        <input asp-for="Naziv" class="form-control" />
                        <span asp-validation-for="Naziv" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Adresa" class="control-label">Adresa</label>
                        <input asp-for="Adresa" class="form-control" />
                        <span asp-validation-for="Adresa" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Grad" class="control-label">Grad</label>
                        <input asp-for="Grad" class="form-control" />
                        <span asp-validation-for="Grad" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Drzava" class="control-label">Država</label>
                        <input asp-for="Drzava" class="form-control" />
                        <span asp-validation-for="Drzava" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Telefon" class="control-label">Telefon</label>
                        <input asp-for="Telefon" class="form-control" />
                        <span asp-validation-for="Telefon" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Email" class="control-label">Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="RadnoVrijemeOd" class="control-label">Početak radnog vremena</label>
                        <input asp-for="RadnoVrijemeOd" class="form-control" />
                        <span asp-validation-for="RadnoVrijemeOd" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="RadnoVrijemeDo" class="control-label">Kraj radnog vremena</label>
                        <input asp-for="RadnoVrijemeDo" class="form-control" />
                        <span asp-validation-for="RadnoVrijemeDo" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="DatumOtvaranja" class="control-label">Datum otvaranja</label>
                        <input asp-for="DatumOtvaranja" class="form-control" />
                        <span asp-validation-for="DatumOtvaranja" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Status" class="control-label">Status</label>
                        <select asp-for="Status" class="form-control" name="Status">
                            <option>Aktivna</option>
                            <option>Neaktivna</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group d-flex justify-content-between mt-4">
                <input type="submit" value="Spremi" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-danger">Odustani</a>
            </div>
        </form>
    </div>

    @section Scripts {
    @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
}
else
{
    <div class="container my-5">
        <h2 align="center">Nemate pravo pristupa ovoj stranici!</h2>
    </div>
}
