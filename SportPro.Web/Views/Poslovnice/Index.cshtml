@model IEnumerable<SportPro.Web.Models.Domains.Poslovnice>

@{
    ViewData["Title"] = "Poslovnice";

    int nextPage = Convert.ToInt32(ViewBag.PageNumber) + 1;
    int prevPage = Convert.ToInt32(ViewBag.PageNumber) - 1;
    int currentPage = Convert.ToInt32(ViewBag.PageNumber);
}

@if (User.IsInRole("Uposlenik"))
{
    <p>
        <a asp-controller="Poslovnice" asp-action="Add" class="btn btn-primary ms-3">Dodaj novu poslovnicu</a>
    </p>

    <form method="get" asp-controller="Poslovnice" asp-action="Index">
        <div class="container mt-5">
            <div class="row">
                <div class="col-md-3">
                    <input type="text" class="form-control" name="naziv" value="@ViewBag.Naziv" placeholder="Naziv" />
                </div>
                <div class="col-md-3">
                    <input type="text" class="form-control" name="grad" value="@ViewBag.Grad" placeholder="Grad" />
                </div>
                <div class="col-md-3">
                    <select class="form-control" name="status" asp-items="@ViewBag.StatusList"></select>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-warning">Pretraži</button>
                </div>
            </div>
        </div>
    </form>

    <br />


    @if (Model.Count() == 0)
    {
        <h2 align="center">Nema podataka o poslovnicama!</h2>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        <div class="d-flex align-items-center">
                            Naziv
                            <div class="ml-2">
                                <a class="btn btn-light sort-button p-0" asp-controller="Poslovnice" asp-action="Index" asp-route-sortBy="Naziv" asp-route-sortDirection="Asc" asp-route-naziv="@ViewBag.Naziv"
                                   asp-route-grad="@ViewBag.Grad" asp-route-status="@ViewBag.Status">
                                    <i class="bi bi-arrow-up"></i>
                                </a>
                                <a class="btn btn-light sort-button p-0" asp-controller="Poslovnice" asp-action="Index" asp-route-sortBy="Naziv" asp-route-sortDirection="Desc" asp-route-naziv="@ViewBag.Naziv"
                                   asp-route-grad="@ViewBag.Grad" asp-route-status="@ViewBag.Status">
                                    <i class="bi bi-arrow-down"></i>
                                </a>
                            </div>
                        </div>
                    </th>
                    <th>
                        <div class="d-flex align-items-center justify-content-between">
                            <span>Adresa</span>
                            <div class="d-flex">
                                <a class="btn btn-light sort-button p-0" asp-controller="Poslovnice" asp-action="Index" asp-route-sortBy="Adresa" asp-route-sortDirection="Asc" asp-route-naziv="@ViewBag.Naziv"
                                   asp-route-grad="@ViewBag.Grad" asp-route-status="@ViewBag.Status">
                                    <i class="bi bi-arrow-up"></i>
                                </a>
                                <a class="btn btn-light p-0" asp-controller="Poslovnice" asp-action="Index" asp-route-sortBy="Adresa" asp-route-sortDirection="Desc" asp-route-naziv="@ViewBag.Naziv"
                                   asp-route-grad="@ViewBag.Grad" asp-route-status="@ViewBag.Status">
                                    <i class="bi bi-arrow-down"></i>
                                </a>
                            </div>
                        </div>

                    </th>
                    <th>Grad</th>
                    <th>Država</th>
                    <th>
                        <div class="d-flex align-items-center">
                            Telefon
                            <div class="ml-2">
                                <a class="btn btn-light sort-button p-0" asp-controller="Poslovnice" asp-action="Index" asp-route-sortBy="Telefon" asp-route-sortDirection="Asc" asp-route-naziv="@ViewBag.Naziv"
                                   asp-route-grad="@ViewBag.Grad" asp-route-status="@ViewBag.Status">
                                    <i class="bi bi-arrow-up"></i>
                                </a>
                                <a class="btn btn-light sort-button p-0" asp-controller="Poslovnice" asp-action="Index" asp-route-sortBy="Telefon" asp-route-sortDirection="Desc" asp-route-naziv="@ViewBag.Naziv"
                                   asp-route-grad="@ViewBag.Grad" asp-route-status="@ViewBag.Status">
                                    <i class="bi bi-arrow-down"></i>
                                </a>
                            </div>
                        </div>
                    </th>
                    <th>
                        <div class="d-flex align-items-center">
                            Email
                            <div class="ml-2">
                                <a class="btn btn-light sort-button p-0" asp-controller="Poslovnice" asp-action="Index" asp-route-sortBy="Email" asp-route-sortDirection="Asc" asp-route-naziv="@ViewBag.Naziv"
                                   asp-route-grad="@ViewBag.Grad" asp-route-status="@ViewBag.Status">
                                    <i class="bi bi-arrow-up"></i>
                                </a>
                                <a class="btn btn-light sort-button p-0" asp-controller="Poslovnice" asp-action="Index" asp-route-sortBy="Email" asp-route-sortDirection="Desc" asp-route-naziv="@ViewBag.Naziv"
                                   asp-route-grad="@ViewBag.Grad" asp-route-status="@ViewBag.Status">
                                    <i class="bi bi-arrow-down"></i>
                                </a>
                            </div>
                        </div>
                    </th>
                    <th>Početak radnog vremena</th>
                    <th>Kraj radnog vremena</th>
                    <th>
                        <div class="d-flex align-items-center">
                            Datum otvaranja
                            <div class="d-flex">
                                <a class="btn btn-light sort-button p-0" asp-controller="Poslovnice" asp-action="Index" asp-route-sortBy="DatumOtvaranja" asp-route-sortDirection="Asc" asp-route-naziv="@ViewBag.Naziv"
                                   asp-route-grad="@ViewBag.Grad" asp-route-status="@ViewBag.Status">
                                    <i class="bi bi-arrow-up"></i>
                                </a>
                                <a class="btn btn-light sort-button p-0" asp-controller="Poslovnice" asp-action="Index" asp-route-sortBy="DatumOtvaranja" asp-route-sortDirection="Desc" asp-route-naziv="@ViewBag.Naziv"
                                   asp-route-grad="@ViewBag.Grad" asp-route-status="@ViewBag.Status">
                                    <i class="bi bi-arrow-down"></i>
                                </a>
                            </div>
                        </div>
                    </th>

                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Naziv)</td>
                        <td>@Html.DisplayFor(modelItem => item.Adresa)</td>
                        <td>@Html.DisplayFor(modelItem => item.Grad)</td>
                        <td>@Html.DisplayFor(modelItem => item.Drzava)</td>
                        <td>@Html.DisplayFor(modelItem => item.Telefon)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.RadnoVrijemeOd)</td>
                        <td>@Html.DisplayFor(modelItem => item.RadnoVrijemeDo)</td>
                        <td>@Html.DisplayFor(modelItem => item.DatumOtvaranja)</td>
                        <td>@Html.DisplayFor(modelItem => item.Status)</td>
                        <td class="d-flex justify-content-between">
                            <a asp-action="Edit" asp-route-id="@item.IDPoslovnica" class="btn btn-success">Uredi</a> &nbsp;
                            <a asp-action="Delete" asp-route-id="@item.IDPoslovnica" class="btn btn-danger">Izbriši</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                <li class="page-item @(prevPage < 1 ? "disabled" : "")">
                    <a class="page-link" aria-label="Previous"
                       asp-controller="Poslovnice"
                       asp-action="Index"
                       asp-route-pageNumber="@prevPage"
                       asp-route-pageSize="@ViewBag.PageSize"
                       asp-route-sortBy="@ViewBag.SortBy"
                       asp-route-sortDirection="@ViewBag.SortDirection">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>

                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" asp-controller="Poslovnice" asp-action="Index" asp-route-pageNumber="@i" asp-route-pageSize="@ViewBag.PageSize" asp-route-sortBy="@ViewBag.SortBy"
                           asp-route-sortDirection="@ViewBag.SortDirection">@i</a>
                    </li>
                }

                <li class="page-item @(nextPage > ViewBag.TotalPages ? "disabled" : "")">
                    <a class="page-link" aria-label="Next"
                       asp-controller="Poslovnice"
                       asp-action="Index"
                       asp-route-pageNumber="@nextPage"
                       asp-route-pageSize="@ViewBag.PageSize"
                       asp-route-sortBy="@ViewBag.SortBy"
                       asp-route-sortDirection="@ViewBag.SortDirection">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    }
}
else
{
    <div class="container my-5">
        <h2 align="center">Nemate pravo pristupa ovoj stranici!</h2>
    </div>
}

<style>
    .sort-buttons {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .sort-button {
        padding: 0;
        margin: 0;
    }

</style>
