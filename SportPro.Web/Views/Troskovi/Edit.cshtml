@model SportPro.Web.Models.ViewModels.EditTrosakRequest

@{
    ViewData["Title"] = "Uređivanje troška";
}
@if (User.IsInRole("Uposlenik"))
{
    <div class="row d-flex justify-content-center">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IDTrosak" />
                <div class="form-group">
                    <label asp-for="Naziv" class="control-label"></label>
                    <input asp-for="Naziv" class="form-control" />
                    <span asp-validation-for="Naziv" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="KategorijeTroskovaIDKategorijaTroska" class="control-label">Kategorija troška</label>
                    <select id="KategorijeTroskovaIDKategorijaTroska" name="KategorijeTroskovaIDKategorijaTroska" class="form-control">
                        @foreach (var item in Model.KategorijeTroskovas)
                        {
                            if (item.IDKategorijaTroska == Model.KategorijeTroskovaIDKategorijaTroska)
                            {
                                <option value="@item.IDKategorijaTroska" selected>@item.Naziv</option>
                            }
                            else
                            {
                                <option value="@item.IDKategorijaTroska">@item.Naziv</option>
                            }
                        }
                    </select>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Opis" class="control-label"></label>
                    <input asp-for="Opis" class="form-control" />
                    <span asp-validation-for="Opis" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Datum" class="control-label"></label>
                    <input asp-for="Datum" class="form-control" />
                    <span asp-validation-for="Datum" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Iznos" class="control-label"></label>
                    <input asp-for="Iznos" class="form-control" />
                    <span asp-validation-for="Iznos" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Mjesec" class="control-label"></label>
                    <input asp-for="Mjesec" class="form-control" />
                    <span asp-validation-for="Mjesec" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Godina" class="control-label"></label>
                    <input asp-for="Godina" class="form-control" />
                    <span asp-validation-for="Godina" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group d-flex justify-content-between mt-4">
                    <input type="submit" value="Spremi" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-danger">Odustani</a>
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
    @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

}
else
{
    <div class="container my-5">
        <h2 align="center">Nemate pravo pristupa ovoj stranici!</h2>
    </div>
}