@model SportPro.Web.Models.ViewModels.AddTrosakRequest


@{
    ViewData["Title"] = "Dodavanje novog troška";
}

@if (User.IsInRole("Uposlenik"))
{
    <div class="row d-flex justify-content-center">
        <div class="col-md-4">
            <form asp-action="Add">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Naziv" class="control-label">Naziv</label>
                    <input asp-for="Naziv" class="form-control" />
                    <span asp-validation-for="Naziv" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label for="KategorijeTroskovaIDKategorijaTroska" class="control-label">Kategorija troška</label>
                    <select id="KategorijeTroskovaIDKategorijaTroska" name="KategorijeTroskovaIDKategorijaTroska" class="form-control">
                        @foreach (var tipPromocije in Model.KategorijeTroskovas)
                        {
                            <option value="@tipPromocije.IDKategorijaTroska">@tipPromocije.Naziv</option>
                        }
                    </select>
                    <span asp-validation-for="KategorijeTroskovaIDKategorijaTroska" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Opis" class="control-label">Opis</label>
                    <input asp-for="Opis" class="form-control" />
                    <span asp-validation-for="Opis" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Datum" class="control-label">Datum nastanka</label>
                    <input asp-for="Datum" class="form-control" />
                    <span asp-validation-for="Datum" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Iznos" class="control-label">Iznos</label>
                    <input asp-for="Iznos" class="form-control" />
                    <span asp-validation-for="Iznos" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Mjesec" class="control-label">Mjesec</label>
                    <input asp-for="Mjesec" class="form-control" />
                    <span asp-validation-for="Mjesec" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Godina" class="control-label">Godina</label>
                    <input asp-for="Godina" class="form-control" />
                    <span asp-validation-for="Godina" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group d-flex justify-content-between mt-4">
                    <input type="submit" value="Dodaj" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-danger">Odustani</a>
                </div>
            </form>
        </div>
    </div>
}
else
{
    <div class="container my-5">
        <h2 align="center">Nemate pravo pristupa ovoj stranici!</h2>
    </div>
}